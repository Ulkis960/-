@using DogShow.Models
@model IEnumerable<DogAllViewModel>

@{ 
    ViewData["Title"] = "All";
}

<h1> All Dogs</h1>
<p>
    <a asp-action="Create">Create New Dog</a>
</p>

<form asp-controller="Dogs" asp-action="All" method="get">
    <p>
        breed: <input type="text" name="SearchStringBreed" />
        <input type="submit" value="Filter" />
        Name: <input type="text" name="SearchStringName" />
        <input type="submit" value="Filter" />
        
    </p>
</form>

<form asp-controller="Dogs" asp-action="Sort" method="get">
  
        <input type="submit" value="Sort" />
 
</form>   

<table class="table">
    <thread>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Breed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
        </tr>
    </thread>
    <tbody>
        @foreach(var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Breed)
                    </td>
                    <td>
                        <img src=" @Html.DisplayFor(modelItem => item.Picture)" alt="Image" width="100" />@*@Html.DisplayFor(modelItem => item.Picture)*@
                    </td>
                    <td>
                        <a asp-action="Edit" asp-controller="Dogs" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                 
                </tr>

            }
    </tbody>
</table>

